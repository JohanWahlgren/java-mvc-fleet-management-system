<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="10" style="-fx-padding: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Service Workshop Name Field -->
        <VBox spacing="5">
            <Label text="Name" />
            <TextField fx:id="textFieldWorkshopName" />
        </VBox>
        
        <!-- Service Workshop Type Field -->
        <VBox spacing="5">
            <Label text="Type" />
            <ComboBox fx:id="comboBoxWorkshopType" />
        </VBox>

        <!-- Service Workshop Address Field -->
        <VBox spacing="5">
            <Label text="Address" />
            <TextField fx:id="textFieldWorkshopAddress" />
        </VBox>

        <!-- Buttons -->
        <HBox spacing="10">
            <Button fx:id="buttonWorkshopAdd" onAction="#handleButtonWorkshopAcceptAction" text="Accept" />
            <Button fx:id="buttonWorkshopCancel" onAction="#handleButtonWorkshopCancelAction" text="Cancel" />
        </HBox>
    </VBox>
</AnchorPane>
